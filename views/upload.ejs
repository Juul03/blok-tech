<%- include('header.ejs') %>

<main>
    <h2>Upload your plant here!</h2>
    <p>Fill in all information so we can find a perfect home for the specific environment your plant needs!</p>

    <section>
        <p>*Required fields</p>

        <form action="/upload" method="post" class="upload-form">
            <div>
                <label for="plantpic">Choose images<span class="required">*</span></label>
                <input type="file" name="plantpic" id="plantpic" accept="image/png, image/jpeg">
                <output></output>
            </div>

            <label for="plant-type">Plant type<span class="required">*</span></label>
            <input type="text" name="plant-type" id="plant-type">

            <label for="plant-height">Height<span class="required">*</span></label>
            <input type="number" name="plant-height" id="plant-height" required><span  class="unit-type">cm</span>

            <label for="pot-diameter">Current diameter of the pot<span class="required">*</span></label>
            <input type="number" name="pot-diameter" id="pot-diameter"><span class="unit-type">cm</span>

            <fieldset>
                <legend>Needs a repot?<span class="required">*</span></legend>
            
                <div>
                    <input type="radio" name="yes" id="yes" value="yes">
                    <label for="yes">Yes</label>
                </div>

                <div>
                    <input type="radio" name="no" id="no" value="no">
                    <label for="yes">No</label>
                </div>
            </fieldset>

            <label for="sunlight-brightness">Sunlight brightness<span class="required">*</span></label>
            <div class="range-images">
                <img src="../img/icons/shadow.svg" alt="shadow">
                <img src="../img/icons/halfshadowsun.svg" alt="halfshadowsun">
                <img src="../img/icons/sun.svg" alt="sun">
            </div>
            <input type="range" name="sunlight-brightness" id="sunlight-brightness" min="0" max="4">

            <label for="water-ammount">Water ammount<span class="required">*</span></label>
            <div class="range-images">
                <img src="../img/icons/singledrop.svg" alt="not so much water">
                <img src="../img/icons/doubledrop.svg" alt="a little water">
                <img src="../img/icons/triodrop.svg" alt="a lot of water">
            </div>
            <input type="range" name="water-ammount" id="water-ammount" min="0" max="4">

            <fieldset>
                <legend>Soil-type</legend>
            
                <div>
                  <input type="checkbox" id="regular" name="regular" checked>
                  <label for="regular">Regular</label>
                </div>
            
                <div>
                  <input type="checkbox" id="perlite" name="perlite">
                  <label for="perlite">Perlite</label>
                </div>

                <div>
                    <input type="checkbox" id="succulent mix" name="succulent mix">
                    <label for="succulent mix">Succulent mix</label>
                </div>

                <div>
                    <input type="checkbox" id="else" name="else">
                    <label for="else">Else</label>
                </div>

                <input type="text" name="own-mixture" placeholder="Which soil do you use?">
            </fieldset>

            <fieldset>
                <legend>Care level<span class="required">*</span></legend>
            
                <div>
                    <input type="radio" name="care-level" id="beginner" value="beginner">
                    <label for="beginner">Beginner</label>
                </div>

                <div>
                    <input type="radio" name="care-level" id="intermediate" value="intermediate">
                    <label for="intermediate">Intermediate</label>
                </div>

                <div>
                    <input type="radio" name="care-level" id="expert" value="expert">
                    <label for="expert">Expert</label>
                </div>
            </fieldset>

            <label for="additional-info">Additional info</label>
            <textarea id="additional-info" placeholder="Add more info or specialties about your plant "></textarea>

            <div>
                <label for="agreement" id="agreement-label"><span class="required">*</span>I agree with the terms and conditions</label>
                <input type="checkbox" name="agreement" id="agreement">
            </div>

            <button type="submit">Upload my plant!</button>
        
          </form>

    </section>

</main>

<%- include('footer.ejs') %>